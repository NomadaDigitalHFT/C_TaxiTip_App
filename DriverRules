rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ðŸ”¹ Permitir lectura de userCards
    match /userCards/{documentId} {
      allow read: if request.auth != null;

    
      // ðŸ”¹ Permitir que un conductor se asigne a sÃ­ mismo si aÃºn no hay assignedDriver
      allow update: if request.auth != null && (
        (!exists(resource.data.assignedDriver) || resource.data.assignedDriver == null) ||
        request.auth.uid == resource.data.assignedDriver
      );
    }

    // ðŸ”¹ Permitir a los conductores autenticados leer su perfil y permitir a los usuarios ver la info de los conductores
    match /conductores/{driverId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == driverId;
    }

    // ðŸ”¹ Permitir que los conductores asignen una solicitud a sÃ­ mismos y luego modificarla
    match /requests/{requestId} {
      allow read: if request.auth != null;
      
      allow write: if request.auth != null && (
        request.auth.uid == resource.data.userId || 
        request.auth.uid == resource.data.assignedDriver ||

        // ðŸ”¹ Permitir que un conductor asigne la solicitud si aÃºn no hay conductor asignado
        (!exists(resource.data.assignedDriver) || resource.data.assignedDriver == null)
      );

      // ðŸ”¹ Permitir a los conductores modificar la solicitud si estÃ¡n asignados
      allow update: if request.auth != null && request.auth.uid == resource.data.assignedDriver;
    }
  }
}
