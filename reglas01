rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // 游댳 Permitir lectura de userCards
    match /userCards/{documentId} {
      allow read: if request.auth != null;

      // 游댳 Permitir que cualquier usuario autenticado cree una tarjeta
      allow create: if request.auth != null;

      // 游댳 Permitir que solo el usuario due침o pueda modificar su propia tarjeta (incluyendo direcci칩n y geolocalizaci칩n)
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;

      // 游댳 Permitir que un conductor se asigne a s칤 mismo si a칰n no hay assignedDriver
      allow update: if request.auth != null && (
        (!exists(resource.data.assignedDriver) || resource.data.assignedDriver == null) ||
        request.auth.uid == resource.data.assignedDriver
      );
    }

    // 游댳 Permitir a los usuarios autenticados leer y modificar su propio perfil
    match /usuarios/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // 游댳 Permitir a los conductores autenticados leer su perfil y permitir a los usuarios ver la info de los conductores
    match /conductores/{driverId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == driverId;
    }

    // 游댳 Permitir que los conductores asignen una solicitud a s칤 mismos y luego modificarla
    match /requests/{requestId} {
      allow read: if request.auth != null;
      
      allow write: if request.auth != null && (
        request.auth.uid == resource.data.userId || 
        request.auth.uid == resource.data.assignedDriver ||

        // 游댳 Permitir que un conductor asigne la solicitud si a칰n no hay conductor asignado
        (!exists(resource.data.assignedDriver) || resource.data.assignedDriver == null)
      );

      // 游댳 Permitir a los conductores modificar la solicitud si est치n asignados
      allow update: if request.auth != null && request.auth.uid == resource.data.assignedDriver;
    }
  }
}
